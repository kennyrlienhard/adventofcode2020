{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*", "./src/**/*.json"],
  "exclude": ["node_modules", "src/**/__tests__/*.ts"]
}
